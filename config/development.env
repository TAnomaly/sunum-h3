# Development Environment Configuration for Port Finder Microservices

# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/port_finder

# Redis Configuration
REDIS_URL=redis://redis:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# Service URLs (for API Gateway)
PORT_SERVICE_URL=http://port-service:3001
LOCATION_SERVICE_URL=http://location-service:3002

# API Gateway Configuration
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=*

# Service Ports
PORT=3000

# Cache Configuration
CACHE_TTL=3600
LOCATION_CACHE_TTL=1800
PORT_CACHE_TTL=300

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# H3 Configuration
H3_RESOLUTION=7
H3_MAX_RINGS=10

# Outbox Configuration
OUTBOX_BATCH_SIZE=50
OUTBOX_RETRY_ATTEMPTS=3
OUTBOX_CLEANUP_DAYS=7

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
